<!DOCTYPE html>
<html ng-app="app" ng-class="loggedIn ? '' : 'body-full-height'">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/styles")*@
    <link rel="stylesheet" type="text/css" id="theme" href="~/Assets/styles/css/theme-default.css"/>
</head>
<body>
    @RenderBody()

    @Scripts.Render("~/vendors")
    @Scripts.Render("~/app")
    @Scripts.Render("~/misc")
</body>
</html>
